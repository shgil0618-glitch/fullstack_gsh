<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thejoa703.dao.UserInfoDao">
	<insert id="insert" parameterType="com.thejoa703.dto.UserInfoDto">
		insert into userinfo (no, email, age)  
		values ( userinfo_seq.nextval, #{email} , #{age} )
	</insert>
	
	<!-- resultType는 리턴값이 있을때만 작성 -->
	<select resultType="UserInfoDto" id="selectAll">
		    select * from userinfo  order by no desc
	</select>
	
	<!-- resultType는 리턴값이 있을때만 작성 -->
	<select resultType="UserInfoDto" id="select" parameterType="int">	
		select * from userinfo  where  no=#{no}
	</select>
	
	<update  id="update" parameterType="UserInfoDto">
		update     update userinfo  set  email=#{email} , age=#{age} where no=#{no}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from userinfo  where  no=#{no}
	</delete>
</mapper>

<!-- 1. insert     insert into userinfo (no, email, age)  values ( userinfo_seq.nextval, 'first@gmail.com' , 11  )
2. select     select * from userinfo  order by no desc;
3. 해당번호 유저정보   select * from userinfo  where  no=1
4. update     update userinfo  set  email='a@a' , age=100 where no=1
5. delete  해당번호 유저삭제 delete from userinfo  where  no=1 -->